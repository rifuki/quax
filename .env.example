# App
RUST_ENV=development          # development | production
RUST_LOG=info
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database
# Local (--profile db):   postgres://quax:secret@quax-postgres:5432/quax_db
# Supabase:               postgres://postgres.<ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres
DATABASE_URL=postgres://quax:secret@quax-postgres:5432/quax_db
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=1

# Local postgres credentials (only used with --profile db)
POSTGRES_USER=quax
POSTGRES_PASSWORD=secret
POSTGRES_DB=quax_db

# JWT
JWT_ACCESS_SECRET=change-me-access-secret-min-32-chars
JWT_REFRESH_SECRET=change-me-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRY_SECS=3600     # 1 hour
JWT_REFRESH_EXPIRY_SECS=604800  # 7 days

# API Key (optional â€” leave empty to disable)
API_KEY=
